# API Gateway Environment Variables
# Copy this file to .env and fill in your values

# Data Module URL (use IP for standalone, service name for docker-compose)
DATA_MODULE_URL=http://10.255.32.82:8080

# Stream Base URL (Nginx-RTMP with HLS)
STREAM_BASE_URL=http://10.255.32.80:8080

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=10.255.32.143:9092
KAFKA_DECISION_TOPIC=decision_results
KAFKA_CONSUMER_GROUP=api-gateway-decisions

# API Configuration
API_PREFIX=/api
ENV=dev

# CORS Configuration (restrict in production)
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
